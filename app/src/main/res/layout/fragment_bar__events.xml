<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pelz.konstantin.wolfofnymphenburg.Bar_Events">

    <!-- TODOS: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/effectSpinner"
            android:layout_width="match_parent"
            android:layout_height="51dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="272dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/effect"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="Effekt: "
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/effectText"
                android:layout_width="260dp"
                android:layout_height="251dp"
                android:layout_weight="1"
                android:text="blablabla"
                android:textSize="24sp" />

            <View
                android:id="@+id/view3"
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <Button
            android:id="@+id/applyEffect"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:onClick="applyEvent"
            android:text="Effekt fÃ¼r 2 Minuten starten"
            android:textSize="18sp" />

    </LinearLayout>
</FrameLayout>